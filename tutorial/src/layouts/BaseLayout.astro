---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'
import { ViewTransitions } from 'astro:transitions';

const { pageTitle } = Astro.props;

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:opsz@6..96&family=Playfair+Display&family=Roboto&display=swap&family=Pixelify+Sans&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{pageTitle}</title>
  </head>
  <body class="flex flex-col" transition:animate="slide" >
    <Header />
    <h1 class="font-pixelify text-6xl sm:text-4xl xs:text-4xl m-auto text-center text-headers">{pageTitle}</h1>
    <div class="flex flex-col gap-10 m-auto items-center w-11/12 rounded-lg p-10">
      <slot />
    </div>
    <Footer />
    <script>
      import "../scripts/menu.js";
      import "../scripts/theme.js";
    </script>
  </body>
</html>